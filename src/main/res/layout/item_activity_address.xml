<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/iaa_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="王高远"
            android:textColor="@color/whole_text_blackFirst"
            android:textSize="@dimen/whole_secondTextSize"/>

        <TextView
            android:id="@+id/iaa_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="131409014592"
            android:textColor="@color/whole_text_blackSecond"
            android:textSize="@dimen/whole_secondTextSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/iaa_tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="江苏省苏州市吴中区开发区江苏省苏州市吴中区仁爱路1号"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/raybuy_select_address_arrow"/>
    </LinearLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whole_divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/iaa_cb_defalut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/iaa_tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/del"
            android:drawablePadding="5dp"
            android:text="删除"
            android:textColor="@color/whole_text_blackFirst"
            android:textSize="@dimen/whole_secondTextSize"/>
    </LinearLayout>

    <!--分割线-->
    <TextView
        android:id="@+id/ifms_tv_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/whole_divider"/>
</LinearLayout>
