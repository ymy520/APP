<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:background="@drawable/bg_border">

    <LinearLayout
        android:id="@+id/mynews_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/mynews_tab_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dip"
            >

            <TextView
                android:id="@+id/mynews_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全部"
                android:textColor="#000000"
                android:textSize="15dip"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mynews_tab_pri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dip"
            >

            <TextView
                android:id="@+id/mynews_pri_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="私信"
                android:textColor="#000000"
                android:textSize="15dip"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mynews_tab_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dip"
            >

            <TextView
                android:id="@+id/mynews_merchant_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="商家消息"
                android:textColor="#000000"
                android:textSize="15dip"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mynews_tab_sys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dip"
            >

            <TextView
                android:id="@+id/mynews_sys_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="系统消息"
                android:textColor="#000000"
                android:textSize="15dip"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/mynews_line_iv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:contentDescription="tab">
    </ImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

</LinearLayout>