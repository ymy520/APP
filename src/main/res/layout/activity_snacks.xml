<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="cn.elife.elife.SnacksActivity">

    <!--头部搜索-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/as_iv_back"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:src="@drawable/map_ic_maps_indicator_search_position"/>

        <EditText
            android:id="@+id/as_et_search"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:background="@drawable/shape_main_topbar_edittext"
            android:drawableLeft="@drawable/sp_search_press"
            android:drawableRight="@drawable/ic_home_voice_search_holo"
            android:hint=" 搜索你想找的商品"
            android:textColorHint="@color/whole_text_blackSecond"
            android:textSize="@dimen/whole_thirdTextSize"
            />

        <ImageView
            android:id="@+id/as_btn_search"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/im_msg_icon"
           />

    </LinearLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="@color/whole_divider"
        />

    <!--轮播图-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <include layout="@layout/banner"/>
    </android.support.v7.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:background="@color/snacksdiver"/>

    <!--下拉列表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="@color/whole_baseColor">
    <Spinner
        android:id="@+id/snacksclassify"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:entries="@array/classify"
        android:paddingLeft="4dp"
        android:background="@color/whole_baseColor"
        android:dropDownSelector="@color/whole_baseColor"
        />
        <TextView
        android:layout_width="1dp"
        android:layout_height="38dp"
        android:layout_marginTop="-11dp"
        android:background="@color/snacksdiver"/>
    <Spinner
        android:id="@+id/snackshot"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:entries="@array/hot"
        android:paddingLeft="4dp"
        android:background="@color/whole_baseColor"
        />
        <TextView
            android:layout_width="1dp"
            android:layout_height="38dp"
            android:layout_marginTop="-11dp"
            android:background="@color/snacksdiver"/>
    <Spinner
        android:id="@+id/snacksplase"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:entries="@array/place"
        android:paddingLeft="4dp"
        android:background="@color/whole_baseColor"
        />
    </LinearLayout>

   <!--显示零食列表-->
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="center"

        android:id="@+id/snacksRecyclerView">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
