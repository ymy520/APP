<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.elife.elife.FeedBackActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_box"
                android:layout_width="43dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/actionbar_back_normal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-50dp"
                android:gravity="center"
                android:text="意见反馈"
                android:textSize="@dimen/whole_firstTextSize"/>
        </LinearLayout>
        <!--分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="0dp"
            android:background="@color/snacksdiver"
            />

    <LinearLayout
        style="@style/style_activity_update_address_mainlinearlayout"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp">
        <EditText
            android:id="@+id/feed_et_detail"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_height="290dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
            android:background="@color/whole_white"
            android:gravity="left"
            android:hint="请留下您的宝贵意见"/>
        </android.support.v7.widget.CardView>
       </LinearLayout>
    </LinearLayout>
    <!--最后的提交按钮-->
    <TextView
        android:id="@+id/feed_tv_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/whole_text_redColor"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:text="提交"
        android:textColor="@color/whole_text_whiteColor"
        android:textSize="@dimen/whole_firstTextSize"/>
</LinearLayout>
