<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
    >

    <RadioGroup
        android:id="@+id/bottom_rg_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whole_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bottom_rb_home"
            style="@style/bottom_menu_rb"
            android:checked="true"
            android:drawableTop="@drawable/bottom_rb_home"
            android:text="首页"
            android:textSize="@dimen/bottomNav_TextSize"/>

        <RadioButton
            android:id="@+id/bottom_rb_merchant"
            style="@style/bottom_menu_rb"
            android:drawableTop="@drawable/bottom_rb_merchant"
            android:text="商家"
            android:textSize="@dimen/bottomNav_TextSize"
            />

        <RadioButton
            android:id="@+id/bottom_rb_social"
            style="@style/bottom_menu_rb"
            android:drawableTop="@drawable/bottom_rb_social"
            android:text="社交"
            android:textSize="@dimen/bottomNav_TextSize"/>

        <RadioButton
            android:id="@+id/bottom_rb_cart"
            style="@style/bottom_menu_rb"
            android:drawableTop="@drawable/bottom_rb_cart"
            android:text="购物车"
            android:textSize="@dimen/bottomNav_TextSize"/>

        <RadioButton
            android:id="@+id/bottom_rb_my"
            style="@style/bottom_menu_rb"
            android:drawableTop="@drawable/bottom_rb_my"
            android:text="我的"
            android:textSize="@dimen/bottomNav_TextSize"/>
    </RadioGroup>

</merge>