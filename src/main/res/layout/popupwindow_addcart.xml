<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/whole_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="3dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whole_text_blackFirst"
                android:text="胸包潮男款"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/whole_text_blackFirst"
                android:text="销量：1000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/whole_btn_pressed"
                android:text="￥89.0"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/whole_text_blackFirst"
            android:text="类别"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/addcart_goods_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:button="@null"
                    android:textSize="12sp"
                    android:textColor="@drawable/detail_goods_type_textcolor_selector"
                    android:background="@drawable/detail_goods_type_selector"
                    android:text="黑色"/>

                <RadioButton
                    android:id="@+id/addcart_goods_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:button="@null"
                    android:textSize="12sp"
                    android:textColor="@drawable/detail_goods_type_textcolor_selector"
                    android:background="@drawable/detail_goods_type_selector"
                    android:text="黑色"/>

                <RadioButton
                    android:id="@+id/addcart_goods_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:button="@null"
                    android:textSize="12sp"
                    android:textColor="@drawable/detail_goods_type_textcolor_selector"
                    android:background="@drawable/detail_goods_type_selector"
                    android:text="黑色"/>

                <RadioButton
                    android:id="@+id/addcart_goods_type4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:textColor="@drawable/detail_goods_type_textcolor_selector"
                    android:background="@drawable/detail_goods_type_selector"
                    android:layout_marginLeft="8dp"
                    android:textSize="12sp"
                    android:text="黑色"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="确定"
        android:gravity="center"
        android:background="@color/part_bg_buynow"
        android:textColor="@color/whole_white"
        android:textSize="20sp"
        android:id="@+id/detail_goods_confirm"
        />
    </LinearLayout>

</android.support.v7.widget.CardView>